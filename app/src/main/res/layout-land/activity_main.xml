<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/progress_of_the_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.lab4.ProgressOfTheGameFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/change_user_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.lab4.ChangeUserNameFragment"
        android:visibility="gone" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/developer_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.lab4.DeveloperInfoFragment"
        android:visibility="gone" />
</RelativeLayout>